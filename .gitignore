# Ignore everything
/*
.*

# Allow specific top-level dotfiles
!/.bash_logout
!/.bash_profile
!/.bashrc
!/.deno
!/.profile
!/.zprofile

# Allow only specific .ssh file
!/.ssh/
!/.ssh/config

# Explicitly ignore other .ssh files
.ssh/*
!.ssh/config

# Allow .config folder
!/.config/

# Ignore everything inside it
/.config/*

# Allow only specific subfolders
!/.config/Code/**
!/.config/alacritty/**
!/.config/dunst/**
!/.config/fish/**
!/.config/gitui/**
!/.config/helix/**
!/.config/i3/**
!/.config/i3status-rs/**
!/.config/iterm2/**
!/.config/kitty/**
!/.config/nushell/**
!/.config/picom.conf
!/.config/rofi/**
!/.config/starship.toml
!/.config/sway/**
!/.config/termite/**
!/.config/tmux/**
!/.config/waybar/**
!/.config/wezterm/**
!/.config/zellij/**

# ❌ Ignore this explicitly
.config/nvim/profile.log
.config/github-copilot/
.zshrc.local

# Allow only listed .emacs.d content
!/.emacs.d/
!/.emacs.d/dashboard.el
!/.emacs.d/email.el
!/.emacs.d/fira-code.el
!/.emacs.d/init.el
!/.emacs.d/javascript.el
!/.emacs.d/packages.el
!/.emacs.d/python.el
!/.emacs.d/rust.el
!/.emacs.d/settings.el
!/.emacs.d/shell.el
!/.emacs.d/snippets/**
!/.emacs.d/variables.el

# ❌ Explicitly ignore .emacs.d garbage
.emacs.d/backups/
.emacs.d/bookmarks
.emacs.d/elpa/
.emacs.d/projects
.emacs.d/quelpa/
.emacs.d/recentf
.emacs.d/transient/
.emacs.d/tree-sitter/
