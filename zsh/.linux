#! /usr/bin/env zsh

alias open='/usr/bin/xdg-open'
alias blog='~/dev/Zolmok/dev'
alias CAPS='xmodmap ~/.Xmodmap-caps'
alias nocaps='xmodmap ~/.Xmodmap'

# ls
alias ls='ls --color'
alias ll='ls -l'
alias la='ls -a'

# copy/paste
alias pbcopy='xsel --clipboard --input'
alias pbpaste='xsel --clipboard --output'

# python
if [ -f $HOME/.pyenv/bin ]; then
    export PATH=$HOME/.pyenv/bin:$PATH
    eval "$(pyenv init -)"
    eval "$(pyenv virtualenv-init -)"
fi
# python executables
export PATH="$HOME/.local/bin:$PATH"

# aws
AWS_PATH="$HOME/.local/share/virtualenvs/zolmok-buXw1R7V/bin"
export PATH="$AWS_PATH:$PATH"
source "$AWS_PATH/aws_zsh_completer.sh"

source $HOME/.config/broot/launcher/bash/br
